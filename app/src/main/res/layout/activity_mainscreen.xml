<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F0F4F3"
    tools:context=".mainscreen">


        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="48dp"


            android:background="@drawable/fam"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/login"
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/extra"
            android:text=" Already \n have an \n account?"
            android:textSize="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/username"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/login"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/box"
            android:fontFamily="@font/light"

            android:hint="Username"
            android:inputType="text"


            android:paddingStart="10dp"
            android:textSize="20sp"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/passs"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/username"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/box"

            android:drawableEnd="@drawable/baseline_remove_red_eye_24"
            android:fontFamily="@font/light"
            android:hint="Password"

            android:inputType="textPassword"
            android:paddingStart="10dp"

            android:paddingEnd="10dp"


            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button"
            android:fontFamily="@font/light"
            android:textColor="#F0F4F3"


            android:text="login"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passs" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/black"
            android:text="Create an account"


            android:textColor="#90e0ef"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn6" />


</androidx.constraintlayout.widget.ConstraintLayout>